{
	"schemaVersion": 1,
	"id": "mending-mending",
	"version": "${version}",
	"name": "Mending Mending",
	"description": "A Minecraft Fabric mod that allows for the adjustment of anvil repair costs, adds an optional gamerule for trident repairs as well as the adjustment of the mending repair rate",
	"authors": [
		"ollie.pryde"
	],
	"license": "CC0-1.0",
	"icon": "assets/mending-mending/icon.png",
	"environment": "*",
	"entrypoints": {
		"client": [
			"com.mendmend.client.MendingMendingClient"
		],
		"main": [
			"com.mendmend.MendingMending"
		]
	},
	"mixins": [
		"mending-mending.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.15.11",
		"minecraft": ">=1.21",
		"java": ">=21",
		"fabric-api": "*"
	}
}